@model bank_bills.Models.JuridicPerson
@{
    const int defaultAccount = 0;
}
<div class="right floated thirteen wide computer sixteen wide phone column" id="content">
<input type="hidden" id="error" value="@ViewData["NotEnough"]">
    <div class="ui container grid">
        <div class="row">
            <div class="fifteen wide computer sixteen wide phone centered column">
                <h2><i class="home icon"></i> ESTADO DE CUENTA</h2>
                <div class="ui divider"></div>
                <div class="ui grid">
                    <!-- BEGIN STATISTIC ITEM -->
                    <!-- Begin Page Views -->
                    <div class="four wide computer sixteen wide phone centered column">
                        <div class="ui centered card">
                            <div class="content">
                                <div class="ui centered grid">
                                    <div class="row">
                                        <div class="six wide computer column">
                                            <div class="ui small image simpleimage itemcolor1">
                                                <i class="hand holding usd icon simpleicon"></i>
                                            </div>
                                        </div>
                                        <div class="ten wide computer column">
                                            <span>
                                                <h4>Disponible</h4>
                                            </span>
                                            $ @Model.SavingAccounts[defaultAccount].Amount
                                            <a class="ui tiny label simplelable">
                                                <i class="eye icon"></i>
                                                Detalles
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Page Views -->
                    <!-- Begin Messages -->
                    <div class="four wide computer sixteen wide phone centered column">
                        <div class="ui centered card">
                            <div class="content">
                                <div class="ui centered grid">
                                    <div class="row">
                                        <div class="six wide computer column">
                                            <div class="ui small image simpleimage itemcolor2">
                                                <i class="piggy bank icon simpleicon"></i>
                                            </div>
                                        </div>
                                        <div class="ten wide computer column">
                                            <span>
                                                <h4>Créditos</h4>
                                            </span>
                                            $ @Model.SavingAccounts[defaultAccount].DepositCertificates.Count
                                            <a class="ui tiny label simplelable">
                                                <i class="eye icon"></i>
                                                Detalles
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Messages -->
                    <!-- Begin Downloads -->
                    <div class="four wide computer sixteen wide phone centered column">
                        <div class="ui centered card">
                            <div class="content">
                                <div class="ui centered grid">
                                    <div class="row">
                                        <div class="six wide computer column">
                                            <div class="ui small image simpleimage itemcolor3">
                                                <i class="credit card icon simpleicon"></i>
                                            </div>
                                        </div>
                                        <div class="ten wide computer column">
                                            <span>
                                                <h4>Débitos</h4>
                                            </span>
                                            $ @Model.SavingAccounts[defaultAccount].WithdrawalCertificates.Count
                                            <a class="ui tiny label simplelable">
                                                <i class="eye icon"></i>
                                                Detalles
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Downloads -->
                    <!-- Begin Users -->
                    <div class="four wide computer sixteen wide phone centered column">
                        <div class="ui centered card">
                            <div class="content">
                                <div class="ui centered grid">
                                    <div class="row">
                                        <div class="six wide computer column">
                                            <div class="ui small image simpleimage itemcolor4">
                                                <i class="dollar sign icon simpleicon"></i>
                                            </div>
                                        </div>
                                        <div class="ten wide computer column">
                                            <span>
                                                <h4>Promedio</h4>
                                            </span>
                                            $ 00.00
                                            <a class="ui tiny label simplelable disabled">
                                                <i class="eye icon"></i>
                                                Detalles
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Users -->
                    <!-- END STATISTIC ITEM -->
                    <div class="eight wide computer sixteen wide phone column justifed">
                        <h4>MOVIMIENTOS MENSUALES</h4>
                        <div class="ui divider"></div>
                        <div class="ui tall stacked segment">
                            <a class="ui blue ribbon label">Chart.js Bar Chart - Multi Axis</a>
                            <canvas id="example-multiaxis"></canvas>
                            <div class="ui divider"></div>
                            <button id="rand-multi-axis" class="ui blue button simplelable">
                                Randomize
                                Data
                            </button>
                        </div>
                    </div>
                    <div class="eight wide computer sixteen wide phone column justifed">
                        <h4>MESES MAS ACTIVOS</h4>
                        <div class="ui divider"></div>
                        <div class="ui tall stacked segment">
                            <a class="ui blue ribbon label">Chart.js Pie Chart - Examples</a>
                            <canvas id="example-pie"></canvas>
                            <div class="ui divider"></div>
                            <button id="rand-pie" class="ui blue button simplelable">Randomize Data</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>